<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:tag="layout/coba_image_layout_0"
    android:layout_width="match_parent"
    android:background="#BEF1F1F1"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="设置"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <RelativeLayout
                        android:id="@+id/back_main"
                        android:gravity="center"
                        android:tag="binding_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/setting_back_icon" />
                    </RelativeLayout>
                    <View
                        android:background="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true"
                        android:alpha="0.5" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:background="@drawable/setting_btn_icon"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/setting_face_swt_icon" />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人脸识别" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/face_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:checked="true"
                        android:tag="binding_3"
                        android:thumb="@drawable/yunpan_switch_ios_thumb"
                        android:track="@drawable/yunpan_switch_ios_track_selector" />
                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:background="@drawable/setting_btn_icon"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/setting_light_icon" />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亮度增强" />
                    </LinearLayout>
                    <Switch
                        android:id="@+id/scan_camera_switch"
                        android:layout_width="72dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:tag="binding_1"
                        android:checked="true"
                        android:thumb="@drawable/yunpan_switch_ios_thumb"
                        android:track="@drawable/yunpan_switch_ios_track_selector" />
                </RelativeLayout>


                <RelativeLayout
                    android:orientation="horizontal"
                    android:background="@drawable/setting_btn_icon"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:src="@drawable/setting_light_icon"
                        android:text="多条码"
                        android:textSize="20sp" />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <EditText
                            android:id="@+id/setting_edit"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:digits = "123"
                            android:maxLength="1"
                            android:inputType="number"
                            android:hint="1-3" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/setting_button"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:tag="binding_9"
                            android:background="@drawable/main_adv_orange"
                            android:text="设置"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/black"
                            android:layout_width="60dp"
                            android:layout_height="35dp" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/settings_code"
                    android:orientation="horizontal"
                    android:background="@drawable/setting_btn_icon"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp">


                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="条码设置" />

                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
